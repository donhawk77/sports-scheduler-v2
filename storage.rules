service firebase.storage {
  match /b/{bucket}/o {
    // Check if request is coming from a verified app (App Check)
    function isAppChecked() {
      return request.appToken != null;
    }

    match /users/{userId}/{allPaths=**} {
      allow read: if isAppChecked();
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /venues/{venueId}/{allPaths=**} {
      allow read: if isAppChecked();
      allow write: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'venue' || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    match /public/{allPaths=**} {
      allow read: if isAppChecked();
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
